#include<stdio.h>
int main()
{
  int a;
  char c;
  float b;
  double d;
  printf("1. size of int : %d\n",sizeof(int));//4
  printf("2. size of int : %d\n",sizeof(a));//4

  printf("3. size of float : %d\n",sizeof(float));//4
  printf("4. size of float : %d\n",sizeof(b));//4

  printf("5. size of double : %d\n",sizeof(double));//8
  printf("6. size of double : %d\n",sizeof(d));//8

  printf("7. size of char : %d\n",sizeof(char));//1
  printf("8. size of char : %d\n",sizeof(c));//1
  return(0);
}
